<Window
    x:Class="Media.Ui.GuiWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Gui="clr-namespace:Media.Ui.Gui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Media.Ui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Media Gui"
    Width="1280"
    Height="720"
    Style="{StaticResource {x:Type Window}}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Menu
            Grid.Row="0"
            Grid.Column="0" />
        <Gui:MenuView
            Grid.Row="0"
            Grid.Column="1" />
        <TabControl
            x:Name="Tabs"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            TabStripPlacement="Right">
            <TabItem Header="Files">
                <Gui:FilesView DataContext="{Binding FilesViewModel}" />
            </TabItem>
            <TabItem Header="Radio Stations">
                <Gui:RadioStations DataContext="{Binding RadioStationsViewModel}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
