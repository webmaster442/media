<Window
    x:Class="Media.Ui.GuiWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Media.Ui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Media Gui"
    xmlns:Gui="clr-namespace:Media.Ui.Gui"
    Style="{StaticResource {x:Type Window}}"
    Width="1280"
    Height="720"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Height="Auto" Header="File"/>
        </Menu>
        <TabControl Grid.Row="1" TabStripPlacement="Right">
            <TabItem Header="Files">
                <Gui:FilesView DataContext="{Binding FilesViewModel}"/>
            </TabItem>
            <TabItem Header="Log"></TabItem>
        </TabControl>
    </Grid>
</Window>
