<Window
    x:Class="Media.Ui.ImageViewerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Image Viewer"
    Width="1280"
    Height="720"
    Background="{StaticResource BackgroundColor}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="120" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Stretch="None" />
        <Expander
            Grid.Row="0"
            Grid.Column="1"
            MaxWidth="300"
            HorizontalAlignment="Right"
            Panel.ZIndex="99"
            Background="{StaticResource UiBackground}"
            ExpandDirection="Right"
            Header="Files"
            IsExpanded="True">
            <ListBox Background="{StaticResource UiBackground}" />
        </Expander>
        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Background="{StaticResource UiBackground}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button
                    Grid.Row="0"
                    Grid.RowSpan="4"
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding NextCommand}">
                    <TextBlock
                        FontFamily="Wingdings"
                        FontSize="72"
                        Text="ç" />
                </Button>
                <Button
                    Grid.Row="0"
                    Grid.RowSpan="4"
                    Grid.Column="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding PreviousCommand}">
                    <TextBlock
                        FontFamily="Wingdings"
                        FontSize="72"
                        Text="è" />
                </Button>

                <TextBlock
                    Grid.RowSpan="4"
                    Grid.Column="5"
                    HorizontalAlignment="Right"
                    FontFamily="Webdings"
                    FontSize="48"
                    Text="L" />
                <RadioButton
                    Grid.Row="0"
                    Grid.Column="6"
                    VerticalAlignment="Center"
                    Content="Fit" />
                <RadioButton
                    Grid.Row="1"
                    Grid.Column="6"
                    VerticalAlignment="Center"
                    Content="Fit Width" />
                <RadioButton
                    Grid.Row="2"
                    Grid.Column="6"
                    VerticalAlignment="Center"
                    Content="Fit Height" />
                <RadioButton
                    Grid.Row="3"
                    Grid.Column="6"
                    VerticalAlignment="Center"
                    Content="Original Size" />

            </Grid>
        </Border>
    </Grid>
</Window>
